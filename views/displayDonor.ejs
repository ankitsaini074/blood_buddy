<% include partials/header %>

<h1 style="padding-top:10%;color:#f20000;font-weight:700;" class="text-center animated bounceInDown">Donor list</h1>

		<div class ="container hospital-donor-list">
            <%donors.forEach(function(donor){%>
            <div class="card wow slideInUp" >
              <% if(donor.userType=="Hospital"){ %>
                    <img class="card-img-top image-card" src="img/hospital.png" alt="Card image" >
                <% }else{ %>
                   <img class="card-img-top image-card" src="img/users/client-1.jpg" alt="Card image" >
                <%}%>
                <div class="card-header"><b><%=donor.name%></b></div>
                <div class="card-body"><%=donor.userType%><br>
                    Contact :<%= donor.contactNumber%>
                    <% if (donor.userType == "Hospital") { %>
                        <div class="form-group">
                            <label>
                        <form action="/hospitalquery" method="post">
                        <input type="hidden" name="username" value=<%= donor.local.username %> >
                        <button type="submit" class="btn btn-primary" >View Hospital</button>
                        </form></label></div>
                        <%} else { %>
                            <div class="card-header"><b>Blood Group : <%=donor.bloodGroup%></b></div>
                            <% } %>

                
                </div>
                
            </div>  
            <%});%>
		</div>
         
<% include partials/footer %>